rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User avatars
    match /avatars/{uid}/{fileName} {
      allow read: if request.auth != null; // or true for public avatars
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Store uploads (docs/images)
    match /stores/{storeId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
