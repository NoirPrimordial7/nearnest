rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User avatars
    match /avatars/{uid}/{file=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Store verification documents
    match /storeDocs/{storeId}/{file=**} {
      // Anyone signed in can read via getDownloadURL (UI still shows only to owner/members)
      allow read: if request.auth != null;

      // Owner or members of the store may upload/delete
      allow write: if request.auth != null && (
        get(/databases/(default)/documents/stores/$(storeId)).data.ownerId == request.auth.uid ||
        request.auth.uid in get(/databases/(default)/documents/stores/$(storeId)).data.members ||
        request.auth.uid in get(/databases/(default)/documents/stores/$(storeId)).data.members.keys()
      );
    }

    // default deny
    match /{allPaths=**} { allow read, write: if false; }
  }
}
