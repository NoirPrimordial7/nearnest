rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // user avatars
    match /avatars/{uid}/{allPaths=**} {
      allow read: if request.auth != null;  // you can tighten later if needed
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // (optional) store document uploads later
    match /stores/{storeId}/{allPaths=**} {
      allow read, write: if request.auth != null; // tighten when you wire roles
    }
  }
}
